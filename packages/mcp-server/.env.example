# TaskFlow MCP Server Configuration
# Copy to .env and adjust values

# REST API URL for task operations
TASKFLOW_API_URL=http://localhost:8000

# MCP server configuration
TASKFLOW_MCP_HOST=0.0.0.0
TASKFLOW_MCP_PORT=8001

# SSO Platform URL for OAuth/JWT verification (014-mcp-oauth-standardization)
# Used for: JWKS endpoint, API key verification
TASKFLOW_SSO_URL=http://localhost:3001

# OAuth client ID (optional, for audience validation)
TASKFLOW_OAUTH_CLIENT_ID=taskflow-mcp

# Authentication mode
# true = Dev mode (skip auth, use X-User-ID header)
# false = Production (require JWT or API key)
TASKFLOW_DEV_MODE=true

# Optional: Service token for internal API calls
# If set, used instead of user JWT for API calls
# TASKFLOW_SERVICE_TOKEN=
